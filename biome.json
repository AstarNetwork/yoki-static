{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["whitelistedAddresses.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useButtonType": "off"
			},
			"suspicious":{
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	}
}
